@model IEnumerable<DataLayer.Models.UserData>
@{
    ViewBag.Title = "Список пользователей";
}

<p>
<a class="btn btn-primary" asp-action="Create">Добавить пользователя</a> 
<a class="btn btn-dark" asp-controller="Roles" asp-action="Index">Просмотреть роли пользователей</a>
</p>

<table class="table table-warning">
    <thead class="thead-dark">
    <tr><th>Email</th><th></th></tr>
        </thead>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>