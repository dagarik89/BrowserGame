@model BrowserGame.Models.Persons


<div class="modal-content">
    <div class="modal-header">
        <h4>Персонаж</h4>
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>

    </div>
    <div class="modal-body">
        <dl class="row table-warning">
            <dt class="col-sm-4 table-dark">
                Имя
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-4 table-dark">
                Скорость
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Speed)
            </dd>
            <dt class="col-sm-4 table-dark">
                Цветовая схема
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Color)
            </dd>
            <dt class="col-sm-4 table-dark">
                Размер
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Size)
            </dd>
            <dt class="col-sm-4 table-dark">
                Рекорд
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.MaxPoints)
            </dd>
            <dt class="col-sm-4 table-dark">
                Попытки
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Attempts)
            </dd>
        </dl>

        <div>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.PersonsID">Редактировать</a> |
            <a asp-action="Index">Назад</a>
        </div>
    </div>
</div>