@model IEnumerable<BrowserGame.Models.Persons>

@{
    ViewData["Title"] = "Персонажи";
}

<h1>Персонажи</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Создать новый персонаж</a>
</p>
<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>
<table class="table table-warning">
    <thead class="thead-dark">
        <tr>
            <th>
                Имя
            </th>
            <th>
                Скорость
            </th>
            <th>
                Цветовая схема
            </th>
            <th>
                Размер
            </th>
            <th>
                Пользователь
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @{int count = 0; }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Speed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    <!--
                    <form action="\Home\Game">
                        <button>Выбрать</button>
                    </form>
                    -->
                    <a asp-action="Game" asp-route-id="@item.PersonsID">Выбрать</a>
                </td>

                @if (count > 1)
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.PersonsID">Редактировать</a> |
                        @Html.ActionLink("Подробнее", "Details",
                            new { id = @item.PersonsID }, new { @class = "personItem" }) |
                        <a asp-action="Delete" asp-route-id="@item.PersonsID">Удалить</a> |
                    </td>
                }
            </tr>
            count++;
        }
    </tbody>
</table>

@section scripts
    {
    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
            $(".personItem").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}